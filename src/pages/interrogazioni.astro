---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Dashboard | Interrogazioni">
    <Navbar homeColor="purple" />

    <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header & Input -->
        <div class="glass-premium rounded-3xl p-8 mb-10 slide-up">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-6">
                <div>
                    <h1 class="text-4xl font-black theme-text-primary flex items-center gap-4 tracking-tight mb-2">
                        <div class="p-3 rounded-2xl bg-gradient-to-br from-purple-500 to-indigo-600 shadow-lg shadow-purple-500/20">
                            <i data-lucide="graduation-cap" class="w-8 h-8 text-white"></i>
                        </div>
                        Interrogazioni
                    </h1>
                    <p class="theme-text-secondary font-medium" id="lastUpdate"></p>
                </div>
                
                <div class="flex gap-3 w-full md:w-auto">
                    <div class="relative flex-1 md:w-80">
                        <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400"></i>
                        <input id="searchInput" type="text" placeholder="Cerca studente..."
                            class="w-full pl-12 pr-6 py-3.5 text-base rounded-2xl glass focus:ring-2 focus:ring-purple-500 focus:outline-none transition-all">
                    </div>
                </div>
            </div>

            <!-- Input Form -->
            <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end bg-black/5 dark:bg-white/5 p-6 rounded-2xl border border-white/10">
                <div class="md:col-span-4">
                    <label class="block text-sm font-bold mb-2 ml-1 text-gray-600 dark:text-gray-400">Studente</label>
                    <input id="nameInput" type="text" placeholder="Nome..." class="w-full">
                </div>
                <div class="md:col-span-3">
                    <label class="block text-sm font-bold mb-2 ml-1 text-gray-600 dark:text-gray-400">Data</label>
                    <input id="dateInput" type="date" class="w-full">
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-bold mb-2 ml-1 text-gray-600 dark:text-gray-400">Materia</label>
                    <select id="subjectSelect" class="w-full"></select>
                </div>
                <div class="md:col-span-1">
                    <label class="block text-sm font-bold mb-2 ml-1 text-gray-600 dark:text-gray-400">Voti</label>
                    <input id="gradesCountInput" type="number" value="0" min="0" class="w-full">
                </div>
                <div class="md:col-span-2">
                    <button id="addStudentBtn" class="btn-premium w-full !px-3">
                        <i data-lucide="check-circle" class="w-5 h-5"></i> Salva
                    </button>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="flex flex-wrap gap-3 mt-6">
                <button id="setTodayBtn" class="px-4 py-2 rounded-xl glass text-sm font-bold hover:bg-purple-500 hover:text-white transition-all">Oggi</button>
                <button id="setYesterdayBtn" class="px-4 py-2 rounded-xl glass text-sm font-bold hover:bg-purple-500 hover:text-white transition-all">Ieri</button>
                <button id="setLastWeekBtn" class="px-4 py-2 rounded-xl glass text-sm font-bold hover:bg-purple-500 hover:text-white transition-all">Settimana Scorsa</button>
                <div class="flex-1"></div>
                <button id="openSubjectsModalBtn" class="px-4 py-2 rounded-xl glass text-sm font-bold hover:bg-indigo-500 hover:text-white transition-all flex items-center gap-2">
                    <i data-lucide="settings" class="w-4 h-4"></i> Gestisci Materie
                </button>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-10 slide-up" style="animation-delay: 0.1s;">
            <!-- ... stats as before ... -->
            <div class="glass rounded-3xl p-6 text-center group hover:scale-105 transition-all duration-300">
                <div class="text-4xl font-black text-purple-600 dark:text-purple-400 mb-1" id="totalStudents">0</div>
                <div class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Studenti Totali</div>
            </div>
            <div class="glass rounded-3xl p-6 text-center group hover:scale-105 transition-all duration-300">
                <div class="text-4xl font-black text-rose-600 dark:text-rose-400 mb-1" id="alertCount">0</div>
                <div class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Da Interrogare</div>
            </div>
            <div class="glass rounded-3xl p-6 text-center group hover:scale-105 transition-all duration-300">
                <div class="text-4xl font-black text-emerald-600 dark:text-emerald-400 mb-1" id="recentCount">0</div>
                <div class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Recenti</div>
            </div>
            <div class="glass rounded-3xl p-6 text-center group hover:scale-105 transition-all duration-300">
                <div class="text-4xl font-black text-amber-500 mb-1" id="subjectCount">0</div>
                <div class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-widest">Materie Attive</div>
            </div>
        </div>

        <!-- Dashboard materie -->
        <div id="subjectsContainer" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 pb-12"></div>

        <!-- Empty state -->
        <div id="emptyState" class="text-center py-24 glass rounded-3xl hidden">
            <div class="text-8xl mb-6 animate-float">ðŸ“–</div>
            <h3 class="text-3xl font-black theme-text-primary mb-4">Nessuno studente trovato</h3>
            <p class="theme-text-secondary text-lg max-w-sm mx-auto">
                Il registro Ã¨ attualmente vuoto. Carica il primo studente per iniziare a tracciare.
            </p>
        </div>
    </div>

    <!-- Modal Gestione Materie -->
    <div id="subjectsModal"
        class="fixed inset-0 z-50 hidden items-center justify-center modal-backdrop p-4 bg-black/60 backdrop-blur-sm transition-all duration-300">
        <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden flex flex-col border border-gray-200 dark:border-gray-700 ring-1 ring-white/10 transform scale-95 transition-transform duration-300"
            id="modalContent">
            <div class="p-6 border-b border-gray-100 dark:border-gray-800 bg-gray-50/50 dark:bg-gray-800/50">
                <div class="flex items-center justify-between">
                    <h2 class="text-2xl font-bold text-gray-800 dark:text-white flex items-center gap-2">
                        <i data-lucide="book-open" class="w-6 h-6 text-purple-600"></i>Gestisci Materie
                    </h2>
                    <button id="closeModalBtn"
                        class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 transition">
                        <i data-lucide="x" class="w-6 h-6"></i>
                    </button>
                </div>
            </div>
            <div class="p-6 overflow-y-auto flex-1">
                <!-- Form nuova materia -->
                <div class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg mb-4">
                    <h3 class="font-semibold text-gray-700 dark:text-gray-200 mb-3 flex items-center gap-2">
                        <i data-lucide="plus-circle" class="w-4 h-4"></i>Aggiungi Nuova Materia
                    </h3>
                    <div class="flex gap-2 items-center">
                        <input id="newSubjectName" type="text" placeholder="Nome materia"
                            class="flex-1 p-2 rounded-lg border border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white focus:ring-2 focus:ring-purple-400 focus:outline-none">
                        <input id="newSubjectColor" type="color" value="#9b5de5"
                            class="w-16 h-10 rounded-lg border border-gray-300 cursor-pointer" title="Scegli colore">
                        <button id="addNewSubjectBtn"
                            class="bg-purple-500 text-white px-4 py-2 rounded-lg hover:bg-purple-600 transition">Aggiungi</button>
                    </div>
                </div>
                <!-- Lista materie -->
                <div id="subjectsList" class="space-y-2"></div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/theme.js" is:inline></script>
    <script type="module" src="/js/app.js"></script>
    
    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            const addBtn = document.getElementById('addStudentBtn');
            if (addBtn) addBtn.onclick = () => window.app.addStudent();
            
            const setTodayBtn = document.getElementById('setTodayBtn');
            if (setTodayBtn) setTodayBtn.onclick = () => window.app.setToday();
            
            const setYesterdayBtn = document.getElementById('setYesterdayBtn');
            if (setYesterdayBtn) setYesterdayBtn.onclick = () => window.app.setYesterday();
            
            const setLastWeekBtn = document.getElementById('setLastWeekBtn');
            if (setLastWeekBtn) setLastWeekBtn.onclick = () => window.app.setLastWeek();
            
            const openModalBtn = document.getElementById('openSubjectsModalBtn');
            if (openModalBtn) openModalBtn.onclick = () => window.app.openSubjectsModal();

            const closeModalBtn = document.getElementById('closeModalBtn');
            if (closeModalBtn) closeModalBtn.onclick = () => window.app.closeSubjectsModal();

            const addNewSubjectBtn = document.getElementById('addNewSubjectBtn');
            if (addNewSubjectBtn) addNewSubjectBtn.onclick = () => window.app.addNewSubject();
        });
    </script>
</Layout>
